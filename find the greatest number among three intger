#include <iostream>
using namespace std;
int main()
{ 
    int a,b,c;
    cin>>a>>b>>c;
    if((a>b)&&(a>c))
    {
        cout<<a<<"=is a greatest number"<<endl;
    }
    else if((b>a)&&(b>c))
    {
        cout<<b<<"=it is a greatest number"<<endl;
    }
    else
    {
    cout<<c<<"=is the greatest number"<<endl;
    }
    
    return 0;
}
